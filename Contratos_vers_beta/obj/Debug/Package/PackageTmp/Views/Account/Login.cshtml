@using Contratos_vers_beta.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = "/Home/ViewContratos" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row no-gutter">
        <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
        <div class="col-md-8 col-lg-6">
            <div class="login d-flex align-items-center py-5">
                <div class="container">
                    <div class="row">
                        <div class="col-md-9 col-lg-8 mx-auto">
                            <h3 class="login-heading mb-4">Inicia Sesión!</h3>
                            @Html.ValidationMessage("Error", new { @class = "text-danger" })
                            <form>
                                <div class="form-label-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    <label for="inputEmail">Correo</label>
                                </div>

                                <div class="form-label-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    <label for="inputPassword">Contraseña</label>
                                </div>


                                <button class="btn btn-lg color-azul btn-block btn-login text-uppercase font-weight-bold mb-2" type="submit">Iniciar</button>
                                
                                <div class="text-center">
                                    @Html.ActionLink("¿Eres nuevo? Click aquí.", "Register")
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
